{
    "name": "kyvour/temosh",
    "description": "Test MongoDB Shell",
    "type": "library",
    "license": "MIT",
    "authors": [
        { "name": "Andrew Yustyk", "email": "a.yustyk@gmail.com" }
    ],
    "bin": [
        "temosh"
    ],
    "autoload": {
        "psr-4": { "Temosh\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Temosh\\Test\\": "tests/unit" }
    },
    "require": {
        "php": "^7.1.3",
        "ext-mongodb": "*",
        "symfony/console": "^3.3",
        "mongodb/mongodb": "^1.1",
        "phpmyadmin/sql-parser": "^4.2",
        "symfony/serializer": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.20",
        "symfony/phpunit-bridge": "^3.3",
        "squizlabs/php_codesniffer": "^3.0.2",
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^3.0",
        "phpmetrics/phpmetrics": "^1.10"
    }
}
