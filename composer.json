{
    "name": "kyvour/temosh",
    "description": "Test MongoDB Shell",
    "type": "library",
    "license": "MIT",
    "authors": [
        { "name": "Andrew Yustyk", "email": "a.yustyk@gmail.com" }
    ],
    "bin": [
        "temosh"
    ],
    "autoload": {
        "psr-4": {
            "Temosh\\": "src/",
            "Temosh\\Boot\\": "boot/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Temosh\\Test\\": "tests/unit" }
    },
    "require": {
        "php": "^7.1.3",
        "ext-mongodb": "*",
        "symfony/console": "^v3.4.46",
        "mongodb/mongodb": "^1.8.0",
        "phpmyadmin/sql-parser": "^4.7.1",
        "symfony/serializer": "^3.4.46"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27",
        "symfony/phpunit-bridge": "^3.4.46",
        "squizlabs/php_codesniffer": "^3.5.8",
        "phpmd/phpmd": "^2.9.1",
        "sebastian/phpcpd": "^3.0.1",
        "phpmetrics/phpmetrics": "^1.10"
    }
}
