<?xml version="1.0"?>
<ruleset name="Temosh">
    <description>The coding standard for Temosh app.</description>

    <!-- Check all application directory -->
    <file>.</file>
    <!-- Exclude vendor dirs -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- A path to strip from the front of file paths inside reports -->
    <arg name="basepath" value="."/>
    <!-- Check proper encoding -->
    <arg name="encoding" value="utf-8"/>
    <!-- Check only php files -->
    <arg name="extensions" value="php"/>
    <!-- Check all issues -->
    <arg name="severity" value="-1"/>
    <!-- Enable color output -->
    <arg name="colors"/>
    <!-- Enable progress -->
    <arg value="p"/>

    <!-- Include the whole PSR2 standard -->
    <rule ref="PSR2"/>
</ruleset>
